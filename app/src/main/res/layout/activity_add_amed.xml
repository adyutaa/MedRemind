<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddAMed">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-183dp"
        tools:layout_editor_absoluteY="-160dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:paddingLeft="10dp"
            android:paddingTop="30dp"
            android:text="Add Medication"
            android:textSize="34sp"
            tools:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/med1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/group_2248" />

            <ImageView
                android:id="@+id/med2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/group_2249" />

            <ImageView
                android:id="@+id/med3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/group_2250" />

            <ImageView
                android:id="@+id/med4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/group_2251" />
        </LinearLayout>

        <EditText
            android:id="@+id/nameMed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edit_text_border"
            android:hint="Name of the Med"
            android:inputType="text"
            android:padding="20dp" />

        <EditText
            android:id="@+id/whatForMed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edit_text_border"
            android:hint="What Are Yout Taking it for?"
            android:inputType="text"
            android:padding="20dp" />

        <EditText
            android:id="@+id/doseMed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edit_text_border"
            android:hint="Dose of the Med"
            android:inputType="text"
            android:padding="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:padding="15dp"
                android:textColor="#000000"
                android:text="nevermind"
                android:backgroundTint="#EBEBEB"/>

            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:backgroundTint="#EBEBEB"
                android:padding="15dp"
                android:text="setelah makan"
                android:textColor="#000000"/>

            <Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:backgroundTint="#EBEBEB"
                android:padding="15dp"
                android:text="sebelum makan"
                android:textColor="#000000"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="225dp"
            android:layout_height="70dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="80dp"
            android:text="NEXT"
            android:textStyle="bold"
            android:backgroundTint="#00A9FF" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
